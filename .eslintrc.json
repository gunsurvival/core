{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "xo",
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"],
			"rules": {
				"@typescript-eslint/naming-convention": "off",
				"no-empty-function": "off",
				"@typescript-eslint/no-empty-function": "off",
				"no-mixed-operators": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["/*", "!/src"]
}
